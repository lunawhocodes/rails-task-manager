<!-- app/views/tasks/index.html.erb -->
<h1>My Tasks</h1>
<ul>
<% @tasks.each do |task| %>
    <li>
      <input type="checkbox" >
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", task_path(task), 
          method: :delete,
          data: {confirm: "Are you sure"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
